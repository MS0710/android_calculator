<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">

    <TextView
        android:id="@+id/txt_math"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:gravity="right"
        />

    <TextView
        android:id="@+id/txt_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_math"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:text="0"
        android:gravity="right" />

    <LinearLayout
        android:id="@+id/lineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_num"
        android:gravity="right">

        <Button
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del"/>

    </LinearLayout>

    /////////////////////////////////////////////first row - C 7 4 1 0
    <Button
        android:id="@+id/btn_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineLayout"
        android:text="C"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_c"
        android:text="7"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_7"
        android:text="4"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_4"
        android:text="1"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_0"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_1"
        android:text="0"
        android:textSize="30dp"
        android:textColor="#000000"/>
    /////////////////////////////////////////////row  +/- 8 5 2
    <Button
        android:id="@+id/btn_plus_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_c"
        android:layout_below="@+id/lineLayout"
        android:text="+/-"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_7"
        android:layout_below="@+id/btn_plus_minus"
        android:text="8"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_c"
        android:layout_below="@+id/btn_8"
        android:text="5"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_c"
        android:layout_below="@+id/btn_5"
        android:text="2"
        android:textSize="30dp"
        android:textColor="#000000"/>
    /////////////////////////////////////////////row % 9 6 3 .
    <Button
        android:id="@+id/btn_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_plus_minus"
        android:layout_below="@+id/lineLayout"
        android:text="%"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_plus_minus"
        android:layout_below="@+id/btn_percent"
        android:text="9"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_plus_minus"
        android:layout_below="@+id/btn_9"
        android:text="6"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_plus_minus"
        android:layout_below="@+id/btn_6"
        android:text="3"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_plus_minus"
        android:layout_below="@+id/btn_3"
        android:text="."
        android:textSize="30dp"
        android:textColor="#000000"/>

    /////////////////////////////////////////////row / x - + =
    <Button
        android:id="@+id/btn_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_percent"
        android:layout_below="@+id/lineLayout"
        android:text="/"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_percent"
        android:layout_below="@+id/btn_divide"
        android:text="x"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_percent"
        android:layout_below="@+id/btn_multiply"
        android:text="-"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_percent"
        android:layout_below="@+id/btn_minus"
        android:text="+"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_percent"
        android:layout_below="@+id/btn_add"
        android:text="="
        android:textSize="30dp"
        android:textColor="#000000"/>

    <ListView
        android:id="@+id/lv_record_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_0"/>

</RelativeLayout>